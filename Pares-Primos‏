		 {
				contador--;

		 };

		 if (x==3) 
		 {
				contador--;

		 };   

		if (x==5) 
		{
				contador--;

		 };

		document.write("El número: "+x); 

		if (contador<=2) 
		{

			document.write("!SI! es primo."); // el número  es primo.
		};

		if (contador>=3) 
		{

			document.write("!NO! es primo.") //el número no es primo.
		  
