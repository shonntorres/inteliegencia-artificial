var num = [2,4,6,7,9,0,.1];


//VARIABLES
var contador=2; //Contador
var x; //guardar el número digitado
x = prompt("¿Ingrese un número?");
for(var i = 0; i < contador.length; i++)
	{
		
//NÚMERO PRIMOS
		   
		 if (x%2==0) 
		 {
				contador++;

		 };

		 if (x%3==0)
		 {
				contador++;

		 };

		 if (x%5==0) 
		 {
				contador++;

		 };


